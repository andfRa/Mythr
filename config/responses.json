	{
	 "name":"+5 STR",
	 "effectKey":"MODIFY_ATTRIBUTE_EFFECT",
	 "parameters":{"ATTRIBUTE":"strength", "AMOUNT":5}
	},
	
	{
	 "name":"+1 STR",
	 "effectKey":"MODIFY_ATTRIBUTE_EFFECT",
	 "parameters":{"ATTRIBUTE":"strength", "AMOUNT":1}
	}
	
 ]

